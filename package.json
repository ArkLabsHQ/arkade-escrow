{
	"name": "ark-escrow-api",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"start": "nest start",
		"dev": "concurrently -k -n SERVER,CLIENT,BACKOFFICE -c yellow,cyan,magenta \"nest start --watch\" \"npm run watch:client\" \"npm run watch:backoffice\"",
		"watch:client": "cd client && vite build --watch --mode development",
		"watch:backoffice": "cd backoffice && vite build --watch --mode development",
		"clean": "rm -rf dist node_modules",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:e2e": "jest  server/test/escrow-journey-to-execution.e2e-spec.ts",
		"---------------------------- Production build ---------------------------------------------": "",
		"build": "nest build",
		"build:client": "vite build --config ./client/vite.config.ts",
		"build:backoffice": "vite build --config ./backoffice/vite.config.ts",
		"---------------------------- Static checks ------------------------------------------------": "",
		"lint": "biome lint server/src",
		"typecheck": "tsc --noEmit",
		"fmt": "biome format server/src",
		"---------------------------- Utils --------------------------------------------------------": "",
		"fmt:fix": "biome format --write server/src",
		"lint:fix": "biome lint --write --unsafe server/src",
		"ci:check": "biome ci server"
	},
	"dependencies": {
		"@arkade-os/sdk": "0.3.1-alpha.5",
		"@nestjs/common": "^11.1.6",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.6",
		"@nestjs/event-emitter": "^3.0.1",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/platform-express": "^11.1.6",
		"@nestjs/serve-static": "^5.0.4",
		"@nestjs/swagger": "^11.2.0",
		"@nestjs/typeorm": "^11.0.0",
		"@noble/hashes": "^2.0.0",
		"@noble/secp256k1": "^3.0.0",
		"@reduxjs/toolkit": "^2.9.0",
		"@tabler/icons-react": "^3.35.0",
		"better-sqlite3": "^12.4.1",
		"bip68": "^1.0.4",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"dotenv": "^17.2.1",
		"nanoid": "^5.1.5",
		"next": "^15.5.4",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-redux": "^9.2.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"typeorm": "^0.3.26"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@nestjs/cli": "^11.0.10",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.1.6",
		"@tailwindcss/postcss": "^4.1.13",
		"@types/bcrypt": "^6.0.0",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.3.1",
		"@types/react": "^19.1.16",
		"@types/react-dom": "^19.1.9",
		"@types/supertest": "^6.0.3",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.2.1",
		"jest": "^30.0.5",
		"postcss": "^8.5.6",
		"supertest": "^7.1.4",
		"tailwindcss": "^4.1.13",
		"ts-jest": "^29.4.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2",
		"vite": "^7.1.12"
	}
}
