{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "./",
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["server/src/**/*"],
	"exclude": ["node_modules", "dist"]
}
